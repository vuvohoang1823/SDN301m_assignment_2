<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" />
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://bulma.io">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28" />
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item"> Home </a>

                <a class="navbar-item"> Documentation </a>

                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link"> More </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item"> About </a>
                        <a class="navbar-item"> Jobs </a>
                        <a class="navbar-item"> Contact </a>
                        <hr class="navbar-divider" />
                        <a class="navbar-item"> Report an issue </a>
                    </div>
                </div>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary">
                            <strong>Sign up</strong>
                        </a>
                        <a class="button is-light"> Log in </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- column -->
    <div class="columns" style="padding: 0 20px 0 20px">
        <div class="column">
            <%= title %>
                <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Cost</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orchidData.forEach(function(orchid) {%>
                            <tr>
                                <td>
                                    <%= orchid.name %>
                                </td>
                                <td>
                                    <img class="image is-96x96" src="<%= orchid.image%>" alt="" />
                                </td>
                                <td>
                                    <%= orchid.cost %>
                                </td>
                                <td>
                                    <a href="/orchids" class="button is-warning">Edit</a>
                                    <a href="/orchids/delete/<%= orchid._id%>" class="button is-danger">Delete</a>
                                </td>
                            </tr>
                            <%})%>
                    </tbody>
                </table>
        </div>
        <div class="column">
            <form action="" method="post">
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Text input" name="name" />
                    </div>
                </div>
                <div class="field">
                    <label class="label">Image URL</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Text input" name="image" />
                    </div>
                </div>
                <div class="field">
                    <label class="label">Cost</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Text input" name="cost" />
                    </div>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <button type="submit" class="button is-link">Submit</button>
                    </div>
                    <div class="control">
                        <button type="button" class="button is-link is-light">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>